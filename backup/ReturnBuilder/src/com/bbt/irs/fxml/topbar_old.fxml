<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="topbar" prefHeight="145.0" prefWidth="855.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bbt.irs.controller.TopBarController">
  <center>
    <VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
          
        <Label fx:id="currentStatus" text="Label" textFill="WHITE" />
        <Label fx:id="userMessage" text="Label" textFill="WHITE" />
        <HBox>
          <Label text="Version " GridPane.columnIndex="2" GridPane.rowIndex="3" />
          <Label fx:id="version" GridPane.columnIndex="4" GridPane.rowIndex="5" />
          </HBox>
      </children>
    </VBox>
  </center>
  <left>
    <ImageView fitHeight="70" preserveRatio="true" smooth="true" BorderPane.alignment="CENTER">
      <image>
        <Image url="@../resources/images/Logo.png" />
      </image>
     <!--  <HBox alignment="top_right">
                <Label text="Version " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="version" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
       </HBox>-->
      <BorderPane.margin>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
      </BorderPane.margin>
    </ImageView>
  </left>

     
  <right>
    <Button fx:id="logOut" mnemonicParsing="false" onAction="#processLogout" text="Sign Out" BorderPane.alignment="CENTER">
      <BorderPane.margin>
        <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
      </BorderPane.margin>
    </Button>
  </right>
</BorderPane>
